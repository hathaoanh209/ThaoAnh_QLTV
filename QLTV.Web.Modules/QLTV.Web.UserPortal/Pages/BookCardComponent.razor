<div class="card m-2 p-2" style="width: 12rem;">
    <img src="@book.ImageLink" class="card-img-top" alt="" />
    <div class="card-body">
        <h5 class="card-title"><NavLink href=@($"product/{book.BookId}")>@book.Name</NavLink></h5>
        <p class="card-text" style="color:darkred">@book.Author</p>
    </div>
</div>

@code {
    [Parameter]
    public BOOK book  { get; set; }
}