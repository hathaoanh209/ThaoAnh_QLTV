@page "/"
@using Microsoft.AspNetCore.Authorization
@inject NavigationManager NavigationManager

<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://i.pinimg.com/564x/53/43/c0/5343c04c8097bc7ea860fe517dee45c8.jpg" class="d-block w-100" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h2 style="font-size: 2.5rem; color: black;">WELLCOME BACK</h2>
                <p style="font-size: 1.5rem; color: black;">Khám phá những cuốn sách mới nhất và thú vị</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://i.pinimg.com/564x/91/43/01/914301069a845b704605c72258acb1c3.jpg" class="d-block w-100" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h2 style="font-size: 2.5rem; color: black;">Đọc sách là khoảng thời gian tuyệt vời</h2>
                <p style="font-size: 1.5rem; color: black;">Những trang sách sẽ dẫn bạn đi khắp thế giới</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://i.pinimg.com/564x/49/5e/e6/495ee6becdc1511364acd1b996b8d0cf.jpg" class="d-block w-100" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h2 style="font-size: 2.5rem; color: black;">Mang tri thức vào cuộc sống hàng ngày</h2>
                <p style="font-size: 1.5rem; color: black;">Thư viện là nơi để bạn khám phá và tiếp thu kiến thức</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<script>
    $(document).ready(function () {
        $('#carouselExampleCaptions').carousel({
            interval: 5000 // Thời gian chuyển slide tự động, tính bằng mili giây
        });
    });
</script>

<div class="text-center mt-4">
    <button class="btn btn-primary" @onclick="GoToBooksPage"><strong>XEM SÁCH</strong></button>
</div>

@code {
    private void GoToBooksPage()
    {
        NavigationManager.NavigateTo("/books");
    }
}
